{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true,
    "minify": {
      "compress": true
    }
  },
  "module": {
    "type": "es6",
    "strict": true,
    "noInterop": true
  },
  "sourceMaps": false,
  "exclude": [
    "jest.config.ts",
    ".*\\.spec.tsx?$",
    "./jest-setup.ts$",
    "./**/jest-setup.ts$",
    ".*.js$",
    "./*\\.d.ts"
  ],
  "minify": true
}