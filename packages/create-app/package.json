{
  "name": "@olmokit/create-app",
  "version": "0.0.80",
  "description": "Create Olmo based Laravel apps.",
  "keywords": [
    "olmo",
    "olmokit"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:olmokit/olmokit.git",
    "directory": "packages/create-app"
  },
  "license": "ISC",
  "author": "Acanto <info@acanto.net> (https://acanto.agency/)",
  "type": "module",
  "bin": {
    "create-app": "./index.js"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "build": "pnpm pre && pnpm compile && pnpm post",
    "compile": "ncc build ./src/index.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "dev": "pnpm pre && ncc build ./src/index.ts -w -o ./dist",
    "pre": "mkdir -p ./dist",
    "post": "cp ./package.json ./dist/package.json && cp ./README.md ./packages/create-app/dist/README.md"
  },
  "engines": {
    "node": ">=16.7"
  }
}
