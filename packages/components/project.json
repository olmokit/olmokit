{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "targets": {
    "watch": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "watch": true,
        "clean": false,
        "skipTypeCheck": true,
        "outputPath": "packages/components/dist",
        "main": "packages/components/src/index.ts",
        "tsConfig": "packages/components/tsconfig.lib.json",
        "assets": [
          "packages/components/*.md",
          "packages/components/src/**/*.js",
          "packages/components/src/**/*.scss",
          "packages/components/src/**/*.php",
          "packages/components/src/**/*.svg"
        ]
      }
    },
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/components/dist",
        "main": "packages/components/src/index.ts",
        "tsConfig": "packages/components/tsconfig.lib.json",
        "assets": [
          "packages/components/*.md",
          "packages/components/src/**/*.js",
          "packages/components/src/**/*.scss",
          "packages/components/src/**/*.php",
          "packages/components/src/**/*.svg"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs components {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/components/src/**/*.ts",
          "packages/components/package.json"
        ]
      }
    }
  },
  "tags": []
}
